@page
@model Blog.Pages.ArticleAddModel
@{
    ViewData["Title"] = "Add Article";
}
<h1>Create a new Article</h1>
<div class="mt-3">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Input.Title" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>                
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Input.Body" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Input.Body" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Input.Body" class="text-danger"></span>                
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary">Add Article</button>
        </div>
    </form>
</div>



@section scripts{
<partial name="_ValidationScriptsPartial"></partial>
}